<ProgressBar>:
    canvas.before:
        Color:
            rgba: 0.8, 0.8, 0.8, 1  # 灰色背景
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.2, 0.6, 1, 1  # 蓝色进度条
        Rectangle:
            pos: self.pos
            size: (self.value_normalized * self.width, self.height)